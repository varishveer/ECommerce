@{
}
@model IEnumerable<ModelAccessLayer.Models.ApplicationUser>;
<div class="container">

    <div class="row">
        <h3>User Details</h3>

        <div class="col-6 offset-3">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>FirstName</th>
                        <th>LastName</th>

                        <th>DOB</th>
                        <th>Gender</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>PhoneNumber</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.Id</td>
                        <td>@d.FirstName</td>
                        <td>@d.LastName</td>
                        <td>@d.DOB</td>
                        <td>@d.Gender</td>
                        <td>@d.UserName</td>
                        <td>@d.Email</td>
                        <td>@d.PhoneNumber</td>
                        <td> <a class="btn btn-sm btn-info" asp-action="DeleteUser" asp-controller="Admin" asp-route-email="@d.Email">Delete</a></td>


                    </tr>
                }
            </table>
        </div>
    </div>
</div>
