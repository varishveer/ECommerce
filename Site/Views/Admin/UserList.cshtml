@* UserList.cshtml *@
@{
    ViewData["Title"] = "UserList";
    Layout = "_Layout";
}
@model IEnumerable<ModelAccessLayer.Models.ApplicationUser>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script src="~/js/site.js"></script>
<div class="container">
    <div class="row">
        <h3>User Details</h3>
        <div class="col-12">
            <table class="table table-bordered" id="userTable">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>DOB</th>
                        <th>Gender</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>PhoneNumber</th>
                        <th>Action</th>
                      
                    </tr>
                </thead>
                <tbody class="tbody">
                    @foreach (var d in Model)
                    {
                        <tr class="text-center">
                            <td>@d.Id</td>
                            <td>@d.FirstName</td>
                            <td>@d.LastName</td>
                            <td>@d.DOB</td>
                            <td>@d.Gender</td>
                            <td>@d.UserName</td>
                            <td>@d.Email</td>
                            <td>@d.PhoneNumber</td>
                            <td> <a class="btn btn-sm btn-info" asp-action="DeleteUser" asp-controller="Admin" asp-route-email="@d.Email">Delete</a></td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

