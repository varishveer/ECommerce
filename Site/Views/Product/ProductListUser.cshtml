@using Microsoft.AspNetCore.Identity
@using ModelAccessLayer.Models
@model IEnumerable<ModelAccessLayer.Models.ProductModel>;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "ProductListUser";
    Layout = "_LayoutUser";
}
	@inject SignInManager<ApplicationUser> SignInManager;
	@inject UserManager<ApplicationUser> UserManager;


<div class="container text-center">
    <div class="row">
        
        @foreach (var d in Model)
        {
            <div class="col-md-4 justify-content-center">
                <img src="@d.ImageURL" height="250px" width="250px" />
                <h6>@d.Name</h6>
                <h6>@d.Description</h6>
                <h6>@d.Price</h6>
                @{
                    var ID = Convert.ToString(d.Id);
                    var routeData = new Dictionary<string, string>
                {
                    { "Id",  ID},
                    { "User", UserManager.GetUserName(User) }
                }; 
             }
                <a asp-controller="Home" asp-action="Details" asp-all-route-data="routeData">Details</a>

                <a class="btn btn-sm btn-info" asp-action="AddToCart" asp-controller="Order" asp-all-route-data="routeData">Add To Cart</a>

                
            </div>
        }
    </div>
</div>