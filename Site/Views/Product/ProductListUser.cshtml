@model IEnumerable<ModelAccessLayer.Models.ProductModel>;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "ProductListUser";
    Layout = "_LayoutUser";
}


<div class="container text-center">
    <div class="row">
        
        @foreach (var d in Model)
        {
            <div class="col-md-4 justify-content-center">
                <img src="@d.ImageURL" height="250px" width="250px" />
                <h6>@d.Name</h6>
                <h6>@d.Description</h6>
                <h6>@d.Price</h6>
                <a class="btn btn-sm btn-info" asp-action="AddToCart" asp-controller="Order" asp-route-id="@d.Id ">Add To Cart</a>

                
            </div>
        }
    </div>
</div>